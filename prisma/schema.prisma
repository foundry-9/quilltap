// Quilltap Database Schema
// Phase 0.3: Core Infrastructure - API Key Management and Encryption

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum Provider {
  OPENAI
  ANTHROPIC
  OLLAMA
  OPENROUTER
  OPENAI_COMPATIBLE
  GROK
  GAB_AI
}

enum ImageProvider {
  OPENAI
  GROK
  GOOGLE_IMAGEN
}

enum Role {
  SYSTEM
  USER
  ASSISTANT
  TOOL
}

enum ImageTagType {
  CHARACTER
  PERSONA
  CHAT
  THEME
}

enum AvatarDisplayMode {
  ALWAYS
  GROUP_ONLY
  NEVER
}

// NextAuth.js Models
model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified DateTime?

  // Password authentication fields (Phase 1)
  passwordHash  String?   // bcrypt hash (nullable for OAuth-only users)

  // TOTP 2FA fields (Phase 2)
  totpSecret        String?   // Encrypted TOTP secret
  totpSecretIv      String?   // IV for TOTP secret encryption
  totpSecretAuthTag String?   // Auth tag for TOTP secret encryption
  totpEnabled       Boolean   @default(false)
  totpVerifiedAt    DateTime? // When 2FA was set up
  backupCodes       String?   // Encrypted JSON array of backup codes
  backupCodesIv     String?
  backupCodesAuthTag String?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts        Account[]
  sessions        Session[]
  apiKeys         ApiKey[]
  profiles        ConnectionProfile[]
  imageProfiles   ImageProfile[]
  characters      Character[]
  personas        Persona[]
  chats           Chat[]
  images          Image[]
  tags            Tag[]
  chatSettings    ChatSettings?

  @@map("users")
}

model ChatSettings {
  id                  String   @id @default(uuid())
  userId              String   @unique
  avatarDisplayMode   AvatarDisplayMode @default(ALWAYS)
  avatarDisplayStyle  String   @default("CIRCULAR") // CIRCULAR or RECTANGULAR
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("chat_settings")
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Phase 0.3: API Key Management
model ApiKey {
  id            String   @id @default(uuid())
  userId        String
  provider      Provider
  label         String
  keyEncrypted  String   @db.Text // AES-256-GCM encrypted
  keyIv         String   // Initialization vector
  keyAuthTag    String   // Authentication tag
  isActive      Boolean  @default(true)
  lastUsed      DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  profiles        ConnectionProfile[]
  imageProfiles   ImageProfile[]

  @@map("api_keys")
}

model ConnectionProfile {
  id              String   @id @default(uuid())
  userId          String
  name            String
  provider        Provider
  apiKeyId        String?
  baseUrl         String?  // For Ollama/OpenAI-compatible
  modelName       String
  parameters      Json     @default("{}") // { temperature, max_tokens, top_p, etc. }
  isDefault       Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  apiKey          ApiKey?  @relation(fields: [apiKeyId], references: [id], onDelete: SetNull)
  chats           Chat[]
  tags            ConnectionProfileTag[]

  @@map("connection_profiles")
}

// Phase 0.5: Character and Chat System
model Character {
  id                String   @id @default(uuid())
  userId            String
  name              String
  title             String?
  description       String   @db.Text
  personality       String   @db.Text
  scenario          String   @db.Text
  firstMessage      String   @db.Text
  exampleDialogues  String?  @db.Text
  systemPrompt      String?  @db.Text
  avatarUrl         String?  // Legacy URL-based avatar (deprecated)
  defaultImageId    String?  // New image-based avatar
  sillyTavernData   Json?    // Full ST character spec
  isFavorite        Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user              User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  defaultImage      Image?              @relation("CharacterDefaultImage", fields: [defaultImageId], references: [id], onDelete: SetNull)
  chats             Chat[]
  personas          CharacterPersona[]
  chatAvatarOverrides ChatAvatarOverride[]
  tags              CharacterTag[]

  @@map("characters")
}

model Persona {
  id                String   @id @default(uuid())
  userId            String
  name              String
  title             String?
  description       String   @db.Text
  personalityTraits String?  @db.Text
  avatarUrl         String?  // Legacy URL-based avatar (deprecated)
  defaultImageId    String?  // New image-based avatar
  sillyTavernData   Json?    // Full ST persona spec
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user              User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  defaultImage      Image?              @relation("PersonaDefaultImage", fields: [defaultImageId], references: [id], onDelete: SetNull)
  characters        CharacterPersona[]
  chats             Chat[]
  tags              PersonaTag[]

  @@map("personas")
}

model CharacterPersona {
  characterId String
  personaId   String
  isDefault   Boolean @default(false)

  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  persona     Persona   @relation(fields: [personaId], references: [id], onDelete: Cascade)

  @@id([characterId, personaId])
  @@map("character_personas")
}

model Chat {
  id                  String   @id @default(uuid())
  userId              String
  characterId         String
  personaId           String?
  connectionProfileId String
  imageProfileId      String?  // Optional: separate image generation profile
  title               String
  contextSummary      String?  @db.Text
  sillyTavernMetadata Json?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  user                User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  character           Character             @relation(fields: [characterId], references: [id], onDelete: Cascade)
  persona             Persona?              @relation(fields: [personaId], references: [id], onDelete: SetNull)
  connectionProfile   ConnectionProfile     @relation(fields: [connectionProfileId], references: [id])
  imageProfile        ImageProfile?         @relation(fields: [imageProfileId], references: [id], onDelete: SetNull)
  messages            Message[]
  files               ChatFile[]
  avatarOverrides     ChatAvatarOverride[]
  tags                ChatTag[]

  @@map("chats")
}

model Message {
  id            String    @id @default(uuid())
  chatId        String
  role          Role
  content       String    @db.Text
  rawResponse   Json?     // Full LLM response
  tokenCount    Int?
  swipeGroupId  String?   // For alternative responses
  swipeIndex    Int?
  createdAt     DateTime  @default(now())

  chat          Chat      @relation(fields: [chatId], references: [id], onDelete: Cascade)
  attachments   ChatFile[]

  @@index([chatId, createdAt])
  @@index([swipeGroupId])
  @@map("messages")
}

// Chat file attachments - files uploaded with messages
model ChatFile {
  id              String   @id @default(uuid())
  chatId          String
  messageId       String?  // The message this file was sent with (null if not yet sent)
  filename        String
  filepath        String   // Path relative to public directory
  mimeType        String
  size            Int      // File size in bytes
  width           Int?     // For images
  height          Int?     // For images
  sentToProvider  Boolean  @default(false) // Whether file was successfully sent to LLM provider
  providerError   String?  // Error message if provider doesn't support file uploads
  createdAt       DateTime @default(now())

  chat            Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
  message         Message? @relation(fields: [messageId], references: [id], onDelete: SetNull)

  @@index([chatId])
  @@index([messageId])
  @@map("chat_files")
}

// Phase 0.6: Image Gallery and Tagging System
model Image {
  id              String   @id @default(uuid())
  userId          String
  filename        String
  filepath        String   // Path relative to public directory
  url             String?  // For imported images from URL
  mimeType        String
  size            Int      // File size in bytes
  width           Int?
  height          Int?
  source          String   @default("upload") // 'upload' | 'import' | 'generated'
  generationPrompt String?  @db.Text // Original prompt for generated images
  generationModel  String?  // Which model generated the image (e.g., "dalle-3", "imagen-3")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tags            ImageTag[]
  charactersUsingAsDefault Character[] @relation("CharacterDefaultImage")
  personasUsingAsDefault   Persona[]   @relation("PersonaDefaultImage")
  chatAvatarOverrides      ChatAvatarOverride[]

  @@map("images")
}

model ImageTag {
  id        String       @id @default(uuid())
  imageId   String
  tagType   ImageTagType
  tagId     String       // ID of the character/persona/chat/theme
  createdAt DateTime     @default(now())

  image     Image        @relation(fields: [imageId], references: [id], onDelete: Cascade)

  @@unique([imageId, tagType, tagId])
  @@index([tagType, tagId])
  @@map("image_tags")
}

model ChatAvatarOverride {
  id          String   @id @default(uuid())
  chatId      String
  characterId String   // Which character's avatar we're overriding
  imageId     String   // The image to use as avatar
  createdAt   DateTime @default(now())

  chat        Chat      @relation(fields: [chatId], references: [id], onDelete: Cascade)
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  image       Image     @relation(fields: [imageId], references: [id], onDelete: Cascade)

  @@unique([chatId, characterId])
  @@map("chat_avatar_overrides")
}

// Phase 0.7: Tag System
model Tag {
  id          String   @id @default(uuid())
  userId      String
  name        String
  nameLower   String   // For case-insensitive unique constraint
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user                  User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  characterTags         CharacterTag[]
  personaTags           PersonaTag[]
  chatTags              ChatTag[]
  connectionProfileTags ConnectionProfileTag[]
  imageProfileTags      ImageProfileTag[]

  @@unique([userId, nameLower])
  @@index([userId, nameLower])
  @@map("tags")
}

model CharacterTag {
  id          String    @id @default(uuid())
  characterId String
  tagId       String
  createdAt   DateTime  @default(now())

  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  tag         Tag       @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([characterId, tagId])
  @@index([tagId])
  @@map("character_tags")
}

model PersonaTag {
  id        String   @id @default(uuid())
  personaId String
  tagId     String
  createdAt DateTime @default(now())

  persona   Persona  @relation(fields: [personaId], references: [id], onDelete: Cascade)
  tag       Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([personaId, tagId])
  @@index([tagId])
  @@map("persona_tags")
}

model ChatTag {
  id        String   @id @default(uuid())
  chatId    String
  tagId     String
  createdAt DateTime @default(now())

  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
  tag       Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([chatId, tagId])
  @@index([tagId])
  @@map("chat_tags")
}

model ConnectionProfileTag {
  id                  String            @id @default(uuid())
  connectionProfileId String
  tagId               String
  createdAt           DateTime          @default(now())

  connectionProfile   ConnectionProfile @relation(fields: [connectionProfileId], references: [id], onDelete: Cascade)
  tag                 Tag               @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([connectionProfileId, tagId])
  @@index([tagId])
  @@map("connection_profile_tags")
}

// Phase 1: Image Generation Profiles
model ImageProfile {
  id              String        @id @default(uuid())
  userId          String
  name            String
  provider        ImageProvider
  apiKeyId        String?
  baseUrl         String?       // For self-hosted or custom endpoints
  modelName       String        // e.g., "dall-e-3", "imagen-4", "grok-2-image"
  parameters      Json          @default("{}") // Provider-specific defaults (quality, style, aspectRatio, etc.)
  isDefault       Boolean       @default(false)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  apiKey          ApiKey?       @relation(fields: [apiKeyId], references: [id], onDelete: SetNull)
  tags            ImageProfileTag[]
  chats           Chat[]        // Chats that use this profile for image generation

  @@unique([userId, name])
  @@index([userId, isDefault])
  @@map("image_profiles")
}

model ImageProfileTag {
  id              String       @id @default(uuid())
  imageProfileId  String
  tagId           String
  createdAt       DateTime     @default(now())

  imageProfile    ImageProfile @relation(fields: [imageProfileId], references: [id], onDelete: Cascade)
  tag             Tag          @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([imageProfileId, tagId])
  @@index([tagId])
  @@map("image_profile_tags")
}
