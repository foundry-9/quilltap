{
  "$schema": "../qtap-plugin-template/schemas/plugin-manifest.schema.json",
  "name": "qtap-plugin-grok",
  "title": "Grok Provider",
  "description": "Provides Grok xAI models and image generation for Quilltap",
  "version": "1.0.0",
  "author": {
    "name": "Foundry-9",
    "email": "charles@sebold.tech",
    "url": "https://foundry-9.com"
  },
  "license": "MIT",
  "compatibility": {
    "quilltapVersion": ">=1.7.0",
    "nodeVersion": ">=18.0.0"
  },
  "capabilities": ["LLM_PROVIDER", "IMAGE_PROVIDER"],
  "category": "PROVIDER",
  "main": "index.js",
  "typescript": true,
  "frontend": "REACT",
  "styling": "TAILWIND",
  "enabledByDefault": true,
  "status": "STABLE",
  "keywords": ["grok", "xai", "x-ai", "llm", "ai", "chat", "image-generation"],
  "providerConfig": {
    "providerName": "GROK",
    "displayName": "Grok (xAI)",
    "description": "Grok models by xAI including Grok-2 and image generation capabilities",
    "abbreviation": "XAI",
    "colors": {
      "bg": "bg-purple-100",
      "text": "text-purple-800",
      "icon": "text-purple-600"
    },
    "requiresApiKey": true,
    "requiresBaseUrl": false,
    "apiKeyLabel": "Grok API Key",
    "capabilities": {
      "chat": true,
      "imageGeneration": true,
      "embeddings": false,
      "webSearch": true
    },
    "attachmentSupport": {
      "supported": true,
      "mimeTypes": ["image/jpeg", "image/png", "image/gif", "image/webp"],
      "description": "Images only (JPEG, PNG, GIF, WebP)"
    }
  },
  "permissions": {
    "network": ["api.x.ai"],
    "userData": false,
    "database": false
  }
}
